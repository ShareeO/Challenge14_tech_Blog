<a href="/dashboard" class="go-back"> &larr; Back to dashboard</a>

<article class="new-page card px-5 d-grid gap-3">
    <section class="edit-form-page">
        <div class="form-heading">
            <h2>
                Edit Post
            </h2>
        </div>
        <div class="form-section">
            <form class="edit-post-form d-grid gap-3" id="update-post-form">
                <div class="post-title-section">
                    <label for="post-title" class="form-label">Title</label>
                    <input type="text" name="post-title" id="post-title" class="form-control" value="{{post.title}}" />
                </div>
                <div class="post-content">
                    <label for="post-content" class="form-label">Content</label>
                    <textarea class="entry-field form-control" id="post-content" name="post-content">{{post.body}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Update post</button>
                <button type="button" class="delete-post-btn btn btn-danger">Delete post</button>
            </form>
        </div>
    </section>
</article>

{{#if loggedIn}}
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
{{/if}}