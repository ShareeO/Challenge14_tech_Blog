{{#if posts.length}}
<section>
    <h2>Your Dashboard</h2>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">edit post</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<section class="new-post-section">
    <a href="/dashboard/new" id="new">+ Create new post</a>
</section>


<script src="/javascript/create-post.js"></script>